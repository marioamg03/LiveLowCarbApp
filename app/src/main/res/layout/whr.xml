<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/whr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="livelowcarb.livelowcarbapp.whr"
    android:background="@color/colorAccent">


    <!-- esta es la barra del menu de la app aca esta el nombre -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/appbar_padding_top"
                android:theme="@style/AppTheme.AppBarOverlay"
                android:paddingBottom="16dp">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" >
                    <ImageView
                        android:src="@drawable/logohome"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:paddingLeft="10dp">

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingBottom="10dp"
                    android:paddingTop="20dp"
                    android:gravity="center_horizontal">

                    <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/female"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:textSize="24sp"
                        android:checked="false"
                        android:layout_marginRight="25dp" />

                    <RadioButton
                        android:text="Men"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/men"
                        android:textStyle="normal|bold"
                        android:textSize="24sp"
                        android:textColor="@android:color/background_light" />

                </RadioGroup>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton1"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Waist"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_weight="0.32"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:gravity="center"
                        android:layout_height="52dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:ems="3"
                        android:id="@+id/waist"
                        android:layout_weight="0.14"
                        android:layout_marginTop="1.5dp"
                        android:background="@android:color/background_light"
                        android:textColorLink="?attr/colorPrimary"
                        android:textColor="?attr/actionMenuTextColor"
                        android:layout_marginLeft="15dp"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:text="cm"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView9"
                        android:layout_height="match_parent"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="0.01" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton2"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="Hip"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView11"
                        android:layout_weight="0.32"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:gravity="center"
                        android:layout_height="52dp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="numberDecimal"
                        android:ems="3"
                        android:id="@+id/hip"
                        android:layout_weight="0.12"
                        android:layout_marginTop="1.5dp"
                        android:background="@android:color/background_light"
                        android:textColorLink="?attr/colorPrimary"
                        android:textColor="?attr/actionMenuTextColor"
                        android:layout_marginLeft="20dp"
                        android:textStyle="normal|bold"
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp" />

                    <TextView
                        android:text="cm"
                        android:layout_width="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_height="match_parent"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="0.01" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/botonesinferiores"
                    android:layout_marginTop="10dp">


                    <Button
                        android:text="Calculate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/calculate"
                        android:layout_weight="1"
                        android:background="?android:attr/actionBarItemBackground"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:textSize="16sp"
                        android:onClick="whrcalculate" />

                    <Button
                        android:text="Clean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/clean"
                        android:layout_weight="0.24"
                        android:background="?android:attr/actionBarItemBackground"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:textSize="16sp"
                        android:onClick="callclean" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/result_whr"
                        android:layout_weight="0.32"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="15dp" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/body"
                        android:layout_weight="0.32"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textStyle="normal|bold"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:srcCompat="@drawable/manzana"
                        android:id="@+id/image"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
